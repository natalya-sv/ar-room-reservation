<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--        <item name="colorPrimary">@color/main_blue</item>-->
<!--        <item name="colorSecondary">@color/main_dark_blue</item>-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.AppCompat.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="main_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="spots_style">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_button_style">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/blue_round_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:title">AR app</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>
    </style>

    <style name="room_availability_room_name">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="room_availability_horizontal_line">
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="room_availability_room_status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/lato_italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="room_availability_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/arvo</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="room_availability_meeting_room_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/arvo</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/secondaryColor</item>
    </style>

    <style name="meetingRoom_reservations_overview">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
</resources>
