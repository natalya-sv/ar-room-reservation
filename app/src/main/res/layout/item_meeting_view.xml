<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/start_time_meeting"
        style="@style/main_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="12:00"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeHyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/main_text_style"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/start_time_meeting"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/end_time_meeting"
        style="@style/main_text_style"
        android:text="13:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/timeHyphen"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/main_text_style"
        android:layout_marginTop="2dp"
        android:text=": "
        app:layout_constraintStart_toEndOf="@+id/end_time_meeting"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_organizer"
        style="@style/main_text_style"
        android:layout_marginStart="2dp"
        android:text="Natalya Suslova"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/colon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>